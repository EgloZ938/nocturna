            <label for="password">Mot de passe</label>
            <input type="password" name="password" id="password" class="input focus">
        </div>

        <div class="flex justify-content">
            <input type="submit" name="commit" value="Se connecter" data-disable-with="Se connecter" id="hover">
        </div>
     <% end %>
     <div class="flex justify-content">
