<%= stylesheet_link_tag('gamemaster') %>
<%= favicon_link_tag asset_path('zyro-image.png') %>

<div class="container">
    <h1>Donner un objet à <%= @user.name %></h1>
    <table>
        <tr>
            <th></th>
            <th>ID</th>
            <th>Nom</th>
            <th>Rareté</th>
            <th colspan="2">Interaction</th>
        </tr>

        <% @objets.each do |objet| %>
            <tr>
                <td><img src=<%= objet.image %>></td>
                <td><%= objet.id %></td>
                <td><%= objet.nom %></td>
                <td><%= objet.rarete %></td>
                <td><%= link_to 'Give', gamemaster_giveItemUser_path(objet_id: objet.id, user_id: @test) %></td>
            </tr>
        <% end %>
    </table>
    <%= link_to 'Retour', gamemaster_index_path %>
</div>