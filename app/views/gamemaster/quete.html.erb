<%= stylesheet_link_tag('gamemaster') %>
<%= favicon_link_tag asset_path('zyro-image.png') %>

<%if @gamemaster %>
    <div class="container">
        <h1>Gestion des QUÊTES</h1>
        <table>
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th colspan="3">Interaction</th>
            </tr>

            <% @quetes.each do |quete| %>
                <tr>
                    <td><%= quete.id %></td>
                    <td><%= quete.titre %></td>
                    <td><%= link_to 'Afficher +', gamemaster_showQuete_path(id: quete.id) %></td>
                    <td><%= link_to 'Modifier', gamemaster_editQuete_path(id: quete.id) %></td>
                    <td><%= link_to 'Supprimer', gamemaster_destroyQuete_path(id: quete.id),
                            method: :delete,
                            data: { confirm: "En faisant ça vous allez supprimer la quête. Êtes vous sûr ?" } %></td>
                </tr>
            <% end %>
        </table>
        <%= link_to 'Créer une nouvelle quête', gamemaster_newQuete_path %>
    </div>
<% end %>